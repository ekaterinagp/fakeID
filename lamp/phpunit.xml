<phpunit
    colors="true"
    processIsolation="false"
    stopOnFailure="false"
    bootstrap="tests/autoload.php"
    >
    <php>
        <ini name="memory_limit" value="-1"/>
        <ini name="apc.enable_cli" value="1"/>
    </php>

    <!-- Add or exclude any additional test suites you want to run here -->
    <testsuites>
        <testsuite name="app">
            <directory suffix="Test.php">tests</directory>
        </testsuite>
    </testsuites>


